<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="">
            <img src="logo.png" alt="Ludo Cities Logo" style="height:3rem; width:auto; margin-right:0.5rem;">
            <h1 class="text-xl font-bold text-yellow-400">Ludo Cities</h1>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>


<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="games">
                <span class="bi bi-dice-6-fill-nav-menu" aria-hidden="true"></span> Games
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="chat">
                <span class="bi bi-messenger-nav-menu"></span> Chat
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="transactions">
                <span class="bi bi-wallet-fill-nav-menu" aria-hidden="true"></span> Transactions
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="deposit">
                <span class="bi bi-cash-coin-nav-menu" aria-hidden="true"></span> Deposit
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="withdraw">
                <span class="bi bi-coin-nav-menu" aria-hidden="true"></span> Withdraw
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="support">
                <span class="bi bi-patch-question-fill-nav-menu" aria-hidden="true"></span> Support
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> Settings
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

          window.initHomePageScripts = () => {
            function startCountdown() {
                const seconds = document.querySelector(".seconds .number"),
                      minutes = document.querySelector(".minutes .number"),
                      hours   = document.querySelector(".hours .number"),
                      days    = document.querySelector(".days .number");

                const targetDate = new Date("2025-10-20T00:26:48+05:00");

                setInterval(() => {
                    const now = new Date().getTime();
                    const distance = targetDate.getTime() - now;

                    if (distance <= 0) {
                        days.textContent = hours.textContent =
                        minutes.textContent = seconds.textContent = "00";
                        return;
                    }

                    const d = Math.floor(distance / (1000 * 60 * 60 * 24));
                    const h = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const m = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                    const s = Math.floor((distance % (1000 * 60)) / 1000);

                    days.textContent = d < 10 ? `0${d}` : d;
                    hours.textContent = h < 10 ? `0${h}` : h;
                    minutes.textContent = m < 10 ? `0${m}` : m;
                    seconds.textContent = s < 10 ? `0${s}` : s;
                }, 1000);
            }

            startCountdown();

            const marquee = document.querySelector(".marquee-inner");
            const speed = 1;
            let scrollAmount = 0;
            let isHovered = false;

            const marqueeContent = marquee.innerHTML;
            marquee.innerHTML += marqueeContent;

            marquee.querySelectorAll("img").forEach(img => {
                img.addEventListener("mouseover", () => isHovered = true);
                img.addEventListener("mouseout", () => isHovered = false);
            });

            function startScrolling() {
                if (!isHovered) {
                    scrollAmount -= speed;
                    if (Math.abs(scrollAmount) >= marquee.scrollWidth / 2) {
                        scrollAmount = 0;
                    }
                    marquee.style.transform = `translateX(${scrollAmount}px)`;
                }
                requestAnimationFrame(startScrolling);
            }
            startScrolling();

            var ctx = document.getElementById('tokenDistributionChart').getContext('2d');
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: [
                        'Play-to-Earn (35%)',
                        'Treasury (20%)',
                        'Team & Founders (15%)',
                        'Public Sale / IDO (10%)',
                        'Staking & Yield (10%)',
                        'Marketing & Partners (5%)',
                        'Advisors / Early Backers (5%)'
                    ],
                    datasets: [{
                        data: [35, 20, 15, 10, 10, 5, 5],
                        backgroundColor: [
                            '#4caf50', '#2196f3', '#ff9800', '#9c27b0',
                            '#00bcd4', '#ff5722', '#607d8b'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: tooltipItem => `${tooltipItem.label}: ${tooltipItem.raw}%`
                            }
                        }
                    }
                }
            });
        };

    </script>
